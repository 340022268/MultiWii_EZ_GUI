<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutDataMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextViewInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tittle"
        android:gravity="center"
        android:text="---"
        android:textColor="@color/tittleText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tittle"
        android:gravity="center"
        android:text="@string/Menu"
        android:textColor="@color/tittleText" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="409dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/linearLayoutData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#30b0d8"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/Button01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@color/Buttons"
                    android:minWidth="50dp"
                    android:onClick="Dashboard1OnClick"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:text="@string/PitchRoll"
                    android:textColor="@color/ButtonsTextColor"
                    android:textSize="@dimen/padding_large"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/Button02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@color/Buttons"
                    android:minWidth="50dp"
                    android:onClick="Dashboard2OnClick"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:text="@string/dashboard2"
                    android:textColor="@color/ButtonsTextColor"
                    android:textSize="@dimen/padding_large"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/buttonMap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@color/Buttons"
                    android:minWidth="50dp"
                    android:onClick="MapOnClick"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:text="@string/Map"
                    android:textColor="@color/ButtonsTextColor"
                    android:textSize="@dimen/padding_large"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/buttonGPS"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@color/Buttons"
                    android:minWidth="50dp"
                    android:onClick="GPSOnClick"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:text="@string/GPS"
                    android:textColor="@color/ButtonsTextColor"
                    android:textSize="@dimen/padding_large"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@color/Buttons"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:onClick="RadioButtonOnClick"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:text="@string/Radio"
                    android:textColor="@color/ButtonsTextColor"
                    android:textSize="@dimen/padding_large"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@color/Buttons"
                    android:minWidth="50dp"
                    android:onClick="MotorsOnClick"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:text="@string/Motors"
                    android:textColor="@color/ButtonsTextColor"
                    android:textSize="@dimen/padding_large"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@color/Buttons"
                    android:minWidth="50dp"
                    android:onClick="GraphsOnClick"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:text="@string/Graphs"
                    android:textColor="@color/ButtonsTextColor"
                    android:textSize="@dimen/padding_large"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/buttonPID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@color/Buttons"
                    android:minWidth="50dp"
                    android:onClick="PIDOnClick"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:text="@string/PID"
                    android:textColor="@color/ButtonsTextColor"
                    android:textSize="@dimen/padding_large"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <Button
                    android:id="@+id/buttonOther"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@color/Buttons"
                    android:minWidth="50dp"
                    android:onClick="CheckboxesOnClick"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:text="@string/SetCheckboxes"
                    android:textColor="@color/ButtonsTextColor"
                    android:textSize="@dimen/padding_large"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@color/Buttons"
                    android:minWidth="50dp"
                    android:onClick="LogingOnClick"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:text="@string/Logging"
                    android:textColor="@color/ButtonsTextColor"
                    android:textSize="@dimen/padding_large"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@color/Buttons"
                    android:minWidth="50dp"
                    android:onClick="FrskyOnClick"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:text="@string/Frsky"
                    android:textColor="@color/ButtonsTextColor"
                    android:textSize="@dimen/padding_large"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:visibility="visible" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@color/Buttons"
                    android:minWidth="50dp"
                    android:onClick="ControlTEST"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:text="@string/Control"
                    android:textColor="@color/ButtonsTextColor"
                    android:textSize="@dimen/padding_large"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>